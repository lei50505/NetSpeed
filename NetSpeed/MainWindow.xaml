<Window x:Class="NetSpeed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="45" Width="95" ShowInTaskbar="False" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None" Icon="resource/main.ico" MouseDown="Window_MouseDown" Loaded="Window_Loaded" >
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem x:Name="MenuItemLockMove"  Header="锁定移动" Click="MenuItemLockMove_Click"  ></MenuItem>
            <MenuItem x:Name="MenuItemTopMost"  Header="置顶" Click="MenuItemTopMost_Click" ></MenuItem>
            <MenuItem x:Name="MenuItemExit"  Header="退出" Click="MenuItemExit_Click" ></MenuItem>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid>

        <Border CornerRadius="5"  Background="Black"   Opacity="0.5"/>


        <Grid>

            <TextBlock x:Name="TextBlockDown" Margin="5,5,5,25" FontWeight="Bold" TextAlignment="Right" Foreground="White"/>

            <TextBlock x:Name="TextBlockUp" Margin="5,25,5,5" FontWeight="Bold" TextAlignment="Right" Foreground="White"/>

        </Grid>
    </Grid>
</Window>
